<Window x:Class="KeyboardStop.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeyboardStop 设置" 
        Height="420" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 快捷键设置 -->
        <GroupBox Grid.Row="0" Header="快捷键设置">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="切换锁定快捷键：" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="HotkeyTextBox" 
                             IsReadOnly="True" 
                             Text="Ctrl + Alt + K"
                             Margin="10,0"
                             Padding="8,5"
                             Background="White"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <Button Grid.Column="2" Content="测试" Click="TestHotkey_Click"/>
                </Grid>
                <TextBlock Text="点击输入框后按下新的快捷键组合" 
                           Foreground="Gray" FontSize="11" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- 功能设置 -->
        <GroupBox Grid.Row="1" Header="功能设置">
            <StackPanel>
                <CheckBox x:Name="CorrectionPollingCheckBox" 
                          Content="启用纠偏轮询（防止误触切换输入法）"
                          IsChecked="True"/>
                <CheckBox x:Name="StartWithWindowsCheckBox" 
                          Content="开机自动启动"/>
                <CheckBox x:Name="StartLockedCheckBox" 
                          Content="启动时自动锁定英文模式"/>
            </StackPanel>
        </GroupBox>

        <!-- 键盘布局 -->
        <GroupBox Grid.Row="2" Header="键盘布局">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="LayoutStatusText" 
                           Text="正在检测..."
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="AddLayoutButton"
                        Content="一键添加 US 布局"
                        Click="AddLayout_Click"/>
            </Grid>
        </GroupBox>

        <!-- 关于 -->
        <GroupBox Grid.Row="3" Header="关于">
            <StackPanel>
                <TextBlock Text="KeyboardStop v1.0.0"/>
                <TextBlock Text="游戏输入法锁定工具 - 通过全局快捷键锁定英文输入" 
                           Foreground="Gray" FontSize="11"/>
            </StackPanel>
        </GroupBox>

        <!-- 按钮 -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存" Click="Save_Click" IsDefault="True"/>
            <Button Content="取消" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
